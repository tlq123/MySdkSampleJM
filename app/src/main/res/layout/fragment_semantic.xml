<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_semantic_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_hint_semantic_request" />

        <Button
            android:id="@+id/btn_request_semantic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_semantic_request" />
        <EditText
            android:id="@+id/et_semantic_robot_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_hint_semantic_robot_id" />
        <EditText
            android:id="@+id/et_semantic_robot_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_hint_semantic_robot_data" />
        <Button
            android:id="@+id/btn_request_semantic_clientinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_semantic_request_with_clientinfo" />
        <Button
            android:id="@+id/btn_request_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_semantic_greet" />

        <Button
            android:id="@+id/btn_request_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_semantic_active" />

        <Button
            android:id="@+id/btn_upload_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_semantic_upload" />

        <Button
            android:id="@+id/btn_upload_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传文件"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_cancel_semantic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_semantic_cancel" />

        <EditText
            android:id="@+id/et_timieout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/et_hint_semantic_timeout" />

        <Button
            android:id="@+id/btn_connect_timeout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_semantic_timeout" />

        <TextView
            android:id="@+id/tv_semantic_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </LinearLayout>
</ScrollView>
