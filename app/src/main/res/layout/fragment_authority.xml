<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_apikey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_apikey"
          />

        <EditText
            android:id="@+id/et_secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_scret"
           />

        <EditText
            android:id="@+id/et_unique_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/type_tips_authority" />

        <EditText
            android:id="@+id/et_uniqueid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/type_custom_device_id" />

        <Button
            android:id="@+id/btn_init_manifest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/init_manifest" />

        <Button
            android:id="@+id/btn_init_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/init_set" />


        <Button
            android:id="@+id/btn_device_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_device_id" />


        <Button
            android:id="@+id/btn_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/userid" />


        <Button
            android:id="@+id/btn_device_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/devicetype" />

        <Button
            android:id="@+id/btn_apikey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_apikey" />


        <Button
            android:id="@+id/btn_secret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_secret" />

        <TextView
            android:id="@+id/tv_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>
