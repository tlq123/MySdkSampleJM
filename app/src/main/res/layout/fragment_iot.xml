<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_mqtt_init"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/init_qtt" />

        <Button
            android:id="@+id/btn_mqtt_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/connect_mqtt" />


        <Button
            android:id="@+id/btn_mqtt_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mqtt_state" />


        <Button
            android:id="@+id/btn_mqtt_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mqtt_sender" />

        <Button
            android:id="@+id/btn_mqtt_disconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mqtt_disconnect" />

        <Button
            android:id="@+id/btn_bind_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/get_bind" />





        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

 </LinearLayout>
</ScrollView>
