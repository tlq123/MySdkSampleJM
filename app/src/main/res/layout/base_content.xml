<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_base_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/btn_end"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_btn_start_end"
            android:gravity="center"
            android:textSize="15sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/btn_end"
            android:background="@drawable/selector_btn_start_end"
            android:gravity="center"
            android:textSize="15sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_music_start"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/btn_start"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_music_btn"
            android:gravity="center"
            android:text="@string/play_music"
            android:textSize="15sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_upload_deviceinfo"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/btn_music_start"
            android:layout_below="@id/btn_music_start"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_btn_start_end"
            android:gravity="center"
            android:text="@string/str_upload_deviceinfo"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/edit_input_bg">

        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000"
            android:dividerHeight="0dip"
            android:listSelector="@android:color/transparent"></ListView>
    </RelativeLayout>
</LinearLayout>